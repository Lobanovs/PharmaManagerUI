<Window x:Class="PharmaManagerUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:PharmaManagerUI.Views"
        Title="PharmaManagerUI" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Панель навигации -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="{Binding WelcomeMessage}" FontSize="16" Margin="0,0,0,20"/>
            <TextBlock Text="Выберите раздел:" FontSize="14" Margin="0,0,0,10"/>
            <ListBox ItemsSource="{Binding AvailableTables}"
                     SelectedItem="{Binding SelectedTable}"
                     DisplayMemberPath="TableName"
                     Height="400"
                     Margin="0,5"/>
            <Button Content="Выйти" Margin="0,20,0,0" Command="{Binding LogoutCommand}"/>
        </StackPanel>

        <!-- Область отображения -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentView}" Margin="10"/>
    </Grid>
</Window>